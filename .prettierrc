{
	"useTabs": true,
	"singleQuote": false,
	"semi": true,
	"trailingComma": "none",
	"printWidth": 80,
	"tabWidth": 4,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": "*.md",
			"options": {
				"proseWrap": "always",
				"parser": "markdown"
			}
		}
	]
}
